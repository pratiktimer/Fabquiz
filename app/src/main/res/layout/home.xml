<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/bg"

    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="@mipmap/bg"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/button"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:background="@null"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/ic_settings_black"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:background="@null"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/shareicon"
            tools:ignore="VectorDrawableCompat" />
        />

        <ImageView
            android:id="@+id/button1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@null"
            app:srcCompat="@mipmap/play2" />

        <ImageView
            android:id="@+id/multiplayer"
            android:layout_width="150dp"
            android:layout_height="188dp"
            android:layout_above="@id/sign_out_bar"
            android:layout_below="@id/button1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="72dp"

            android:background="@null"
            app:srcCompat="@mipmap/multiplayer2" />

        <LinearLayout
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_below="@+id/button"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/email"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"

                android:background="@null"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/email"
                tools:ignore="VectorDrawableCompat" />
            />

            <ImageButton
                android:id="@+id/message"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:background="@null"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/message"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/whatsapp"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:background="@null"
                android:contentDescription="TODO"
                app:srcCompat="@mipmap/whatsapp"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:background="@null"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/cancel"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <!--<TextView-->
        <!--android:id="@+id/textView11"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/button"-->
        <!--android:layout_toEndOf="@+id/play1"-->
        <!--android:text="Settings"-->
        <!--android:textColor="@color/cardview_light_background"-->
        <!--android:textSize="18sp" />-->


        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/share"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:fontFamily="@font/aldrich"
            android:padding="5dp"
            android:text="Multiplayer With Phone Contacts"
            android:textColor="@color/yourColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aldrich"
            android:textColor="@color/yourColor"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/sign_in_bar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/textView14"
            android:background="@mipmap/bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/sign_out_bar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/textView14"
            android:layout_marginTop="10dp"
            android:background="@color/bgrules"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="4">


            <Button
                android:id="@+id/show_achievements_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:background="@drawable/button7"
                android:fontFamily="@font/autour_one"
                android:text="@string/show_achievements"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/show_leaderboards_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/button7"
                android:fontFamily="@font/autour_one"
                android:text="@string/show_leaderboards"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>